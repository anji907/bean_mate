<div class="container">
  <h2 class="text-center mt-5">パスワード変更</h2>
    <%= form_with url: password_resets_path, method: :post do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: 'labe-control' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "パスワード変更用のメールを送信する", class: 'btn btn-primary ' %>
      </div>
    <% end %>
</div>