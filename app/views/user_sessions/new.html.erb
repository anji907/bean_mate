<div class="container">
  <h3 class="text-center mt-5">ログイン</h3>

  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with url: login_path, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-primary ' %>
        </div>
      <% end %>

      <div class="pt-5 mt-5 mb-3 border-top">
        <%= link_to auth_at_provider_path(provider: :line) do %>
          <%= image_tag 'btn_login_base.png' %>
        <% end %>
      </div>

      <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path %>
    </div>
  </div>
</div>