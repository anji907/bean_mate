<h1>Login</h1>

<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

<div>
  <%= link_to "LINEでログイン", auth_at_provider_path(provider: :line) %>
</div>

<%= link_to 'パスワードを忘れた', new_password_reset_path %>
<%= link_to 'Back', users_path %>